<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"

    >
    <ImageView
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:id="@+id/plug"
        android:visibility="invisible"
    android:background="@drawable/plug"
        android:layout_centerHorizontal="true"
    android:layout_marginTop="45dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/unplug"
        android:background="@drawable/unplug"
        android:layout_alignTop="@+id/plug"
        android:layout_alignLeft="@+id/plug"
        android:layout_alignStart="@+id/plug" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/lock"
        android:background="@drawable/lock"
        android:visibility="invisible"
        android:layout_alignTop="@+id/plug"
        android:layout_alignLeft="@+id/plug"
        android:layout_alignStart="@+id/plug" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock"
        android:id="@+id/botonlock"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_alignLeft="@+id/plug"
        android:layout_alignStart="@+id/plug"
        android:layout_alignRight="@+id/plug"
        android:layout_alignEnd="@+id/plug" />


    
</RelativeLayout>
